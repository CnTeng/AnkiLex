{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["DOM", "ES2022"],
    "rootDir": "./src",
    "outDir": "./dist/temp",
    "allowJs": false,
    "checkJs": false,
    "noEmitOnError": false,
    "sourceMap": true,
    "strict": true,
    "types": ["chrome", "node", "zotero-types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "paths": {
      "@lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src/app/**/*", "src/lib/**/*", "src/zotero/**/*"],
  "exclude": ["node_modules", "dist"]
}
